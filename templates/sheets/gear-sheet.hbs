<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64" />
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name" /></h1>
    </header>
    <div>
        <table>
            <tr>
                <td>
                    Charges
                </td>
                <td>
                    <input name="data.charges.value" type="text" value="{{data.data.charges.value}}"  data-dtype="Number" />
                </td>
                <td>
                    /
                </td>
                <td>
                    <input name="data.charges.max" type="text" value="{{data.data.charges.max}}"  data-dtype="Number" />
                </td>
            </tr>
            <tr>
                <td>
                    Upkeep
                </td>
                <td colspan="3">
                    <input name="data.upkeep" type="text" value="{{data.data.upkeep}}"  data-dtype="Number" />
                </td>
            </tr>
            <tr>
                <td>
                    Effect
                </td>
                <td colspan="3">
                    <input name="data.effect" type="text" value="{{data.data.effect}}" />
                </td>
            </tr>
            <tr>
                <td>
                    Qualities
                </td>
                <td colspan="3">
                    <input name="data.qualities" type="text" value="{{data.data.qualities}}" />
                </td>
            </tr>
            <tr>
                <td>
                    Upgrades
                </td>
                <td colspan="3">
                    <input name="data.upgrades" type="text" value="{{data.data.upgrades}}" />
                </td>
            </tr>
        </table>
    </div>>
</form>